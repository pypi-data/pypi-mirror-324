version: '3.8'

services:
  db_mysql:
    image: mysql:{{ db_version|default('8.0') }}
    volumes:
      - mysql_data:/var/lib/mysql
    environment:
      MYSQL_ROOT_PASSWORD: "{{ db_password|default('admin') }}"
      MYSQL_DATABASE: "{{ db_name|default('my_database') }}"
    restart: unless-stopped

  django:
    build: .
    volumes:
      - .:/app
    environment:
      DB_ENGINE: "django.db.backends.mysql"
      DB_NAME: "{{ db_name|default('my_database') }}"
      DB_USER: "{{ db_user|default('admin') }}"
      DB_PASSWORD: "{{ db_password|default('admin') }}"
      DB_HOST: "db_mysql"
      DB_PORT: "3306"
    depends_on:
      - db_mysql
    ports:
      - "8000:8000"
    command: >
      sh -c "python manage.py migrate"
    restart: unless-stopped

volumes:
  mysql_data:
