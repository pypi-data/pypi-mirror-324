<?xml version="1.0" encoding="UTF-8"?>
<object xmlns="http://textgrid.info/namespaces/metadata/core/2010" xmlns:tg="http://textgrid.info/relation-ns#" xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#" xmlns:tei="http://www.tei-c.org/ns/1.0">
    <generic>
        <provided>
{% if title %}
            <title>{{ title }}</title>
{% endif %}
            <format>text/tg.edition+tg.aggregation+xml</format>
            <notes />
        </provided>
    </generic>
    <edition>
        <isEditionOf>{{ id }}.work</isEditionOf>
{% if author.id %}
        <agent role="author" id="{{ author.id }}">{{ author_name }}</agent>
{% else %}
        <agent role="author">{{ author_name }}</agent>
{% endif %}
        <source>
        <bibliographicCitation>
{% if edition.author %}
    {% if edition.author_id %}
            <author id="{{ edition.author_id }}">{{ edition.author }}</author>
    {% else %}
            <author>{{ edition.author }}</author>
    {% endif %}
{% endif %}
{% if edition.title %}
            <editionTitle>{{ edition.title }}</editionTitle>
{% endif %}
{% if edition.pub_place %}
            <placeOfPublication>
                <value>{{ edition.pub_place }}</value>
            </placeOfPublication>
{% endif %}
{% if edition.pub_date %}
            <dateOfPublication notBefore="{{ edition.pub_date }}" notAfter="{{ edition.pub_date }}">{{ edition.pub_date }}</dateOfPublication>
{% endif %}
            <spage />
        </bibliographicCitation>
        </source>
{% if language %}
        <language>{{ language }}</language>
{% endif %}
        <license licenseUri="https://creativecommons.org/licenses/by/4.0/">CC BY 4.0</license>
    </edition>
</object>